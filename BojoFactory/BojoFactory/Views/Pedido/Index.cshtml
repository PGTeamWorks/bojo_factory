
<script src="~/Scripts/Pedido/pedido.js"></script>

<h2>Pedidos</h2>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <select class="form-control" id="slc-clientes">
                <option value="#">Clientes</option>
            </select>
        </div>

        <div class="form-group">
            <select class="form-control" id="slc-produtos">
                <option value="#">Produtos</option>
            </select>
        </div>
       
        <div class="form-group">
            <label class="control-label">Quantidade</label>
            <input type="text" id="qtdItens" class="form-control" />
        </div>
        <div class="form-group">
            <button id="btn-inserir-produto-pedido" class="btn btn-default">Adicionar</button>
        </div>
    </div>
    <div class="col-md-6">
        <form id="frm-pedidos" action="@Url.Action("ConfirmarPedido")">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                        <th>Valor Total</th>
                    </tr>
                </thead>
                <tbody id="tb-itens-pedidos"></tbody>
                <tfoot></tfoot>
            </table>
        </form>
        <div style="float: right">
            <button id="btn-confirmar-pedido" class="btn btn-default">Confirmar Pedido</button>
        </div>
    </div>
</div>




