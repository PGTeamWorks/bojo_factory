@model Dominio.Entidades.Produto

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Excluir</h4>
        </div>
        <div class="modal-body center-block">
            <h5>Deseja realmente excluir o produto  <strong>@Model.Descricao</strong> ?</h5>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
            <button type="button" class="btn btn-primary" onclick="excluirProduto(@Model.Id);">Sim</button>
        </div>
    </div>
    <div id="alerta-produto"></div>
</div>
