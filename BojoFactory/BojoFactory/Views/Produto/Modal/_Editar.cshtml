@model Dominio.Entidades.Produto

<div class="modal-dialog modal-medium">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Editar Produto</h4>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form id="form-inserir-produto" class="form-horizontal">
                    <div class="form-group">
                        <input name="Id" class="hidden" value="@Model.Id" />
                        <label for="Descricao" class="col-md-2 control-label">Descricao</label>
                        <div class="col-md-4">
                            <input type="text" name="Descricao" class="form-control" value="@Model.Descricao" id="Descricao" placeholder="Descrição">
                        </div>
                        <label for="Cor" class="col-md-2 control-label">Cor</label>
                        <div class="col-md-4">
                            <input type="text" name="Cor" class="form-control" value="@Model.Cor" id="Cor" placeholder="Cor" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Tamanho" class="col-md-2 control-label">Tamanho</label>
                        <div class="col-md-4">
                            <input type="text" name="Tamanho" class="form-control" value="@Model.Tamanho" id="Tamanho" placeholder="Tamanho">
                        </div>
                        <label for="Preco" class="col-md-2 control-label">Preço</label>
                        <div class="col-md-4">
                            <input type="text" name="Preco" class="form-control" value="@Model.Preco" id="Preco" placeholder="Preço" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="SaldoEstoque" class="col-md-3">Saldo Estoque</label>
                        <div class="col-md-7">
                            <input type="text" class="form-control" value="@Model.SaldoEstoque" name="SaldoEstoque" id="SaldoEstoque" placeholder="Saldo Estoque" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="reset" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i> Limpar</button>
            <button id="btn-salvar-cliente" type="button" onclick="editarProduto(@Model.Id);" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Fechar</button>
        </div>
    </div>
    <div id="alerta-produto"></div>
</div>

